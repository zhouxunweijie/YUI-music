.content {
  height: calc(100vh - 200rpx);
  box-sizing: border-box;
  overflow: auto;
  padding-bottom: 120rpx;
}
.item_group {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.item_group .item {
  width: calc((100vw - 120rpx) / 3);
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.item_group .item .item_img {
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: calc((100vw - 120rpx) / 3);
  height: calc((100vw - 120rpx) / 3);
  border-radius: 15rpx;
  position: relative;
}
.item_group .item .item_img .bfl {
  font-size: 22rpx;
  color: #ffffff;
  position: absolute;
  top: 16rpx;
  right: 18rpx;
  display: flex;
  align-items: center;
}
.item_group .item .item_img .bfl_icon {
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.item_group .item .item_img .bf {
  width: 40rpx;
  height: 40rpx;
  right: 14rpx;
  bottom: 16rpx;
  position: absolute;
}
.item_group .item .name {
  font-size: 22rpx;
  line-height: 32rpx;
  padding-top: 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

